                <Button
                    android:id="@+id/btn_2"
                    android:textSize="30sp"
                    android:text="购买"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="票价:60元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>










